<?xml version="1.0"?>
<!DOCTYPE mapping PUBLIC "-//EXOLAB/Castor Mapping DTD Version 1.0//EN"
                         "http://castor.org/mapping.dtd">

<mapping>

	<!-- Project -->
	<class name="flapjack.data.Project" auto-complete="true">
		<field name="dataSets" type="flapjack.data.DataSet" collection="vector"/>
	</class>

	<!-- DataSet -->
	<class name="flapjack.data.DataSet" auto-complete="true">
		<field name="chromosomeMaps" type="flapjack.data.ChromosomeMap" collection="vector"/>
		<field name="lines" type="flapjack.data.Line" collection="vector"/>
		<field name="viewSets" type="flapjack.data.GTViewSet" collection="vector"/>
	</class>

	<!-- ChromosomeMap -->
	<class name="flapjack.data.ChromosomeMap" auto-complete="true">
		<field name="name" type="string">
			<bind-xml node="attribute"/>
		</field>
		<field name="markers" type="flapjack.data.Marker" collection="vector"/>
	</class>

	<!-- Marker -->
	<class name="flapjack.data.Marker" auto-complete="true">
		<field name="name" type="string">
			<bind-xml node="attribute"/>
		</field>
	</class>

	<!-- Line -->
	<class name="flapjack.data.Line" auto-complete="true">
		<field name="name" type="string">
			<bind-xml node="attribute"/>
		</field>
		<field name="genotypes" type="flapjack.data.GenotypeData" collection="vector"/>
	</class>

	<!-- GenotypeData -->
	<class name="flapjack.data.GenotypeData" auto-complete="true">
		<field name="mapName" type="string">
			<bind-xml node="attribute"/>
		</field>
	</class>

	<!-- StateTable -->
	<class name="flapjack.data.StateTable" auto-complete="true">
		<field name="states" type="flapjack.data.AlleleState" collection="vector"/>
	</class>

	<!-- AlleleState -->
	<class name="flapjack.data.AlleleState" auto-complete="true"/>

	<!-- GTViewSet -->
	<class name="flapjack.data.GTViewSet">
		<field name="name" type="string">
			<bind-xml node="attribute"/>
		</field>
		<field name="viewIndex" type="int">
			<bind-xml node="attribute"/>
		</field>
		<field name="views" type="flapjack.data.GTView" collection="vector"/>
	</class>

	<!-- GTView -->
	<class name="flapjack.data.GTView">
		<field name="mapName" type="string">
			<bind-xml node="attribute"/>
		</field>
		<field name="scrollX" type="int">
			<bind-xml node="attribute"/>
		</field>
		<field name="scrollY" type="int">
			<bind-xml node="attribute"/>
		</field>
		<field name="zoom" type="int">
			<bind-xml node="attribute"/>
		</field>
		<field name="lines" type="integer" collection="vector"/>
		<field name="markers" type="integer" collection="vector"/>
	</class>
</mapping>