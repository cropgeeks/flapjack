<?xml version="1.0" encoding="ISO-8859-1"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
						http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0"
	metadata-complete="true">

	<display-name>Flapjack Web Services</display-name>

	<listener>
		<listener-class>jhi.flapjack.servlet.FlapjackServlet</listener-class>
	</listener>

	<session-config>
		<session-timeout>5</session-timeout>
	</session-config>

	<servlet>
		<servlet-name>flapjack</servlet-name>
		<servlet-class>org.restlet.ext.servlet.ServerServlet</servlet-class>
		<init-param>
			<param-name>org.restlet.application</param-name>
			<param-value>jhi.flapjack.servlet.FlapjackServlet</param-value>
		</init-param>
	</servlet>

	<servlet-mapping>
		<servlet-name>flapjack</servlet-name>
		<url-pattern>/*</url-pattern>
	</servlet-mapping>

	<context-param>
		<param-name>r.path</param-name>
		<param-value>/usr/bin/R</param-value>
	</context-param>

	<context-param>
		<param-name>tmp.path</param-name>
		<param-value>/tmp/flapjack-services</param-value>
	</context-param>

</web-app>