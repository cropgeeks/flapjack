<?xml version="1.0" encoding="ISO-8859-1"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
						http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0"
	metadata-complete="true">

	<display-name>Flapjack REST(like) Services (POC: Iain Milne)</display-name>

	<session-config>
		<session-timeout>5</session-timeout>
	</session-config>

	<servlet>
		<servlet-name>flapjack</servlet-name>
		<servlet-class>jhi.flapjack.servlet.FlapjackServlet</servlet-class>
		<multipart-config>
			<location>/tmp</location>
		</multipart-config>
	</servlet>
	<servlet-mapping>
        <servlet-name>flapjack</servlet-name>
        <url-pattern>/servlets/flapjack</url-pattern>
    </servlet-mapping>

	<context-param>
		<param-name>r-path</param-name>
		<param-value>/usr/bin/R</param-value>
	</context-param>

	<context-param>
		<param-name>numthreads</param-name>
		<param-value>4</param-value>
	</context-param>

</web-app>